    <form action="/compose" method="post">
        <div class="form-group">
            <label>Title</label>
            <textarea name="title" class="form-control" id="title" cols="30" rows="2"></textarea>

            <label>Post</label>
            <textarea name="content" class="form-control" id="post" cols="30" rows="5"></textarea>
        </div>
